<h1>Add Task</h1>
<%= form_for [@order_type, @task] do |f| %>
	<%= render 'error' %>

	<div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>    
  </div>
  <div class="field">
  	<%= f.label :category_id %><br>
    <%= f.select :category_id, list_categories %>
  </div>
  <div class="actions">
    <%= f.submit "Add Task"%>
  </div>

<% end %>