<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= favicon_link_tag 'favicon-check.ico' %>
  <title>Error Tracker
  	<% unless @order_type.nil? %>
  	| <%= @order_type.title %>
  	<% end %>
  </title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header'  %>	
		<div class="container">
			<div class="row row-offcanvas row-offcanvas-left">
				<!--NAV-->
				<div class="col-sm-3 sidebar-offcanvas" id="side">			
					<%= render 'layouts/navbar' %>
				</div>

				<!--CONTENT-->
				<div class="col-xs-12 col-sm-9" id="content">
					<div class="panel panel-body" id="content-panel" style="border:1px solid #dddddd; margin: 0px; padding:.5em; min-height: 500px">
						<%= render 'layouts/flash' %>
						<%= yield %>
					</div>
				</div>

			</div>
		</div>

		<footer>
			<%= render 'layouts/footer' %>
		</footer>
</body>
</html>
