<%= form_for @order_type do |f| %>
  <% if @order_type.errors.any? %>
    <div id="error_explanation">
			<h2><%= pluralize(@order_type.errors.count, "error") %> 
				prohibited this template from being saved:</h2>

      <ul>
      <% @order_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <strong> <%= f.label :title %></strong>:  <%= f.text_field :title %>
 
 	<div id="categories">
		<%= f.fields_for :categories do |builder| %>
			<%= render "category_fields", f: builder %>
		<% end %>
		<%= link_to_add_association "Add Category", f, :categories %>	
	</div>
	
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>
