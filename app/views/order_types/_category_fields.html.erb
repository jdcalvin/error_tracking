<div class="nested-fields">
	<div class="panel panel-default" >
		<div class="panel-heading">
			<div style="float:left; padding-top: .5em; margin-right: 1em;">
				<label>Category Name:</label>
			</div>
			<div style="float:left">
				<table style="border:none">
					<th><%= f.text_field :name, class: "form-control"%></th>
				<th>
					<%= link_to_remove_association '', f, class: "glyphicon glyphicon-remove", style: "padding:0;padding-left: .5em;color: #a94442", data: { confirm: "Are you sure?"+"\n"+"\n"+"Removing category will also remove all associated tasks" } %>
					<%= f.hidden_field :_destroy %>
				</th>
				</table>
			</div>
			<div style="clear:both"></div>		
		</div>
		<div class="panel-body">
			<h4>Tasks</h4>
				<div id="tasks">
					<%= f.fields_for :tasks do |builder| %>
						<%= render "task_fields", f: builder %>
					<% end %>
					<%= link_to_add_association "Add Task", f, :tasks, style: "margin: .5em" %>
				</div>
		</div>
	</div>
</div>
