<%= calendar(@date) do |date| %>
  <% if date.month == @date.month %>
	  <div class="day"><%= link_to date.day, "#{date.month}/#{date.day}" %></div>
		<p style = "padding-left: 25%">
		<% unless orders_by_date(date).size < 1 %>
			<%= correct_by_date(date).size %>/<%= orders_by_date(date).size %><br>
		<strong><%= quality_by_date(date) %>%</strong>
		<% else %>
			No Orders
		<% end %>

			</p>
	<% end %>
<% end %>
