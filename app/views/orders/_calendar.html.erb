<%= calendar(@date) do |date| %>
  <% if date.month == @date.month %>
	  <div class="day"><%= link_to date.day, "#{date.month}/#{date.day}" %></div>
	  <p>
		<% unless  @orders.date(date..date.end_of_day).count < 1 %>
			<%=  @orders.date(date..date.end_of_day).no_errors.count %> / 
			<%= @orders.date(date..date.end_of_day).count %>
	  	<br> 
			<strong><%#= %>%</strong>
	  <% else %>
	  	No Orders
		<% end %>
	 	</p>
	<% end %>
<% end %>
