<div style="width:100%">
<h1> Listing Orders for <%= @date.strftime("%x") %></h1>
<%= link_to 'New Order', new_order_type_order_path %>
<h2> <%= render 'breakdown' %> </h2>
</div>
<div class="with_errors">
		<ol>
	    <% @errors.each do |order| %>
	      <li><%= render order %></li>
	    <% end %>
	  </ol>
</div>
<div class="no_errors">
  <ol>
    <% @correct.each do |order| %>
    	<li><%= render order %></li>
    <% end %>
  </ol>
</div>

