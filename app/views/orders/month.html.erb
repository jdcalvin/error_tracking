<div id="orders">
	<h2 id="month"><strong><%= @order_type.title %></strong> for <%= @date.strftime("%B %Y") %> </h2>
  	<%= render 'calendar' %>

</div>
<div style="margin: 0; margin-top: 1em" class="panel panel-default" >
  <div class="panel-heading"> <%= render 'breakdown' %>
  </div>
		<div class="panel-body">
		<% if @orders.count > 0 %> 
			<div id='chart' style="float:left;">
					<%= render_chart @chart, 'chart' %>
			</div>
			<div class="breakdown" style="float:left">
				<% @errors.each_pair do |category, tasks| %>
					<div id="<%= category.downcase.gsub(/ /,"_") %>-container">
						<%= category %>
						<ul>
							<% @errors[category].each_pair do |task, value| %>
								<li><%= task %> - <%= value %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
			</div>
		<% end %>
		</div>
		
</div>